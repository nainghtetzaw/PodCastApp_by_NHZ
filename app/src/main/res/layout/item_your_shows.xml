<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:background="@color/color_white"
    android:layout_marginEnd="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardYourShowPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="25dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgYourShowPoster"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/podcast"
            android:scaleType="centerCrop"
            android:outlineProvider="bounds" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvYourShowType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_pod_cast_type"
        android:textSize="8dp"
        android:background="@drawable/rounded_text"
        android:padding="6dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/cardYourShowPoster"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvYourShowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardYourShowPoster"
        android:layout_below="@+id/tvYourShowType"
        android:text="Women n Tech Podcast, hosted by Expree Devara "
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvYourShowAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardYourShowPoster"
        android:layout_below="@+id/tvYourShowName"
        android:text="Women n Tech Podcast, hosted by Expree Devara "
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_text_grey_white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>